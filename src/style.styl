
  .perfectEffect
    width 100%
    height 1.1rem
    top 5%
    position absolute
    border-radius 1rem
    padding 0
    margin 0
    background rgba(0,0,0,0.1)
    animation perfectEffect 0.3s
    text-align center
    opacity 0
    color white
    text-shadow 0px 0px 2px black
    box-shadow 0px 0px 2px black
  @keyframes perfectEffect {
    from{
      opacity 1
      transform scale(1)
    }
    100%{
      opacity 0
      transform scale(2)
    }
  }

